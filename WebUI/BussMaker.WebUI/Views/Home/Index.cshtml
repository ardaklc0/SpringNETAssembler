@{
    ViewData["Title"] = "Home Page";
}

<div class="container">
    <div class="row">
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Create an entity</h5>
                    <p class="card-text">Create an entity to create a business</p>
                    <a asp-controller="Entity" asp-action="Create" class="btn btn-success card-link">Click here!</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Show all entities</h5>
                    <p class="card-text">Choose an entity to create a business</p>
                    <a asp-controller="Entity" asp-action="Index" class="btn btn-success card-link">Click here!</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">CreateDataTransferObjectCreateAsync</h5>
                    <p class="card-text"></p>
                    <a asp-controller="IDE" asp-action="CreateFirst" class="btn btn-success card-link">Click here!</a>
                </div>
            </div>
        </div>
        <div class="col-sm-3">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">CreateDataTransferObjectUpdateAndGetAsync</h5>
                    <p class="card-text"></p>
                    <a asp-controller="IDE" asp-action="CreateSecond" class="btn btn-success card-link">Click here!</a>
                </div>
            </div>
        </div>
    </div>
</div>